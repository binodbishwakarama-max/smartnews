# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./smartnews.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/smartnews

# Scraper
SCRAPE_INTERVAL_MIN=30
MAX_ARTICLES_PER_SOURCE=20
REQUEST_TIMEOUT=10

# ML Models
TOPIC_MODEL_PATH=ml/models/topic_model.joblib
CLICKBAIT_MODEL_PATH=ml/models/clickbait_model.joblib

# API
API_RATE_LIMIT=100
CACHE_TTL_SECONDS=300

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379
USE_CACHE=false
